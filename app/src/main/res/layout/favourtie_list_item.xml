<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    card_view:cardBackgroundColor="#f4f4f4"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="4dp"
    card_view:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:padding="8dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_favourite_food"
                android:scaleType="fitXY"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:src="@drawable/food" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingTop="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="8"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_favourite_food_name"
                        android:layout_width="match_parent"
                        android:layout_marginRight="8dp"
                        android:layout_height="wrap_content"
                        android:text="Navratan Korma"
                        android:textColor="#d65353"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/tv_favourite_description"
                        android:layout_width="wrap_content"
                        android:maxLines="2"
                        android:layout_height="wrap_content"
                        android:text="(Nine Germ Curry)" />

                    <TextView
                        android:id="@+id/tv_favourite_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SR 1099/-" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="end">

                    <ImageView
                        android:id="@+id/iv_favourite_delete"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@mipmap/like" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_weight="2">

                <ImageView
                    android:id="@+id/iv_food_favourite_type"
                    android:layout_width="20dp"
                    android:visibility="visible"
                    android:layout_height="20dp"
                    android:layout_weight=".2"
                    android:src="@mipmap/veg" />

                <ImageView
                    android:id="@+id/iv_food_favourite_type_non"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:visibility="gone"
                    android:layout_weight=".2"
                    android:src="@mipmap/non_veg" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_weight="1.8"
                    android:gravity="right">

                    <ImageView
                        android:id="@+id/iv_fav_minus"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@mipmap/minus" />

                    <TextView
                        android:id="@+id/tv_food_fav_counter"
                        android:layout_width="30dp"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="5dp"
                        android:layout_marginStart="5dp"
                        android:gravity="center"
                        android:text="0"
                        android:textSize="16sp" />

                    <ImageView
                        android:id="@+id/iv_fav_plus"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@mipmap/plus" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>

