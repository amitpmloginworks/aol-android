<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/delivery_proceed">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="vertical"
                android:paddingLeft="16dp"
                android:paddingRight="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="@string/username"
                    android:textColor="@color/colorPrimary" />

                <EditText
                    android:id="@+id/delivery_username"
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:layout_marginTop="6dp"
                    android:background="@drawable/custom_edittext_grey_bg"
                    android:gravity="center_vertical"
                    android:padding="2dp"
                    android:hint="@string/enter_user_name"
                    android:imeOptions="actionNext"
                    android:inputType="textMultiLine"
                    android:paddingLeft="5dp"
                    android:textSize="14dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="vertical"
                android:paddingLeft="16dp"
                android:paddingRight="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="@string/registrated_mobile_no"
                    android:textColor="@color/colorPrimary" />

                <TextView
                    android:id="@+id/delivery_registered_mobile_no"
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:layout_marginTop="6dp"
                    android:background="@drawable/custom_edittext_grey_bg"
                    android:gravity="center_vertical"
                    android:paddingLeft="5dp"
                    android:textSize="14dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="vertical"
                android:paddingLeft="16dp"
                android:paddingRight="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="@string/delivery_phone_no"
                    android:textColor="@color/colorPrimary" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:weightSum="2"
                    android:orientation="horizontal">


                    <EditText
                        android:id="@+id/edit_contry"
                        android:layout_width="0dp"
                        android:layout_height="32dp"
                        android:layout_margin="6dp"
                        android:background="@drawable/custom_edittext3"
                        android:gravity="center"
                        android:text="+966"
                        android:editable="false"
                        android:clickable="false"
                        android:paddingLeft="5dp"
                        android:maxLength="9"
                        android:layout_weight="0.5"
                        android:inputType="number"
                        android:textSize="14sp" />


                    <EditText
                        android:id="@+id/delivery_phone_no"
                        android:layout_width="0dp"
                        android:layout_height="32dp"
                        android:layout_marginTop="6dp"
                        android:background="@drawable/custom_edittext_grey_bg"
                        android:hint="@string/enter_delivery"
                        android:imeOptions="actionNext"
                        android:inputType="phone"
                        android:maxLength="9"
                        android:layout_weight="1.5"
                        android:paddingLeft="5dp"
                        android:textSize="14dp" />



                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="vertical"
                android:paddingLeft="16dp"
                android:paddingRight="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="@string/email_id"
                    android:textColor="@color/colorPrimary" />

                <EditText
                    android:id="@+id/delivery_email_id"
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:layout_marginTop="6dp"
                    android:background="@drawable/custom_edittext_grey_bg"
                    android:hint="@string/enter_email"
                    android:imeOptions="actionNext"
                    android:inputType="textEmailAddress"
                    android:maxLength="30"
                    android:paddingLeft="5dp"
                    android:textSize="14dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="vertical"
                android:paddingLeft="16dp"
                android:paddingRight="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="@string/house_no"
                    android:textColor="@color/colorPrimary" />

                <EditText
                    android:id="@+id/delivery_house_no"
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:layout_marginTop="6dp"
                    android:background="@drawable/custom_edittext_grey_bg"
                    android:hint="@string/fill_address"
                    android:imeOptions="actionNext"
                    android:inputType="textCapWords"
                    android:maxLength="30"
                    android:paddingLeft="5dp"
                    android:textSize="14dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="vertical"
                android:paddingLeft="16dp"
                android:paddingRight="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="@string/landmark"
                    android:textColor="@color/colorPrimary" />

                <EditText
                    android:id="@+id/delivery_landmark"
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:layout_marginTop="6dp"
                    android:background="@drawable/custom_edittext_grey_bg"
                    android:hint="@string/enter_landmark"
                    android:imeOptions="actionNext"
                    android:inputType="textCapWords"
                    android:maxLength="30"
                    android:paddingLeft="5dp"
                    android:textSize="14dp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="vertical"
                android:paddingLeft="16dp"
                android:paddingRight="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="@string/street"
                    android:textColor="@color/colorPrimary" />

                <EditText
                    android:id="@+id/delivery_street_no"
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:layout_marginTop="6dp"
                    android:background="@drawable/custom_edittext_grey_bg"
                    android:hint="@string/fill_address"
                    android:imeOptions="actionNext"
                    android:inputType="textCapWords"
                    android:maxLength="30"
                    android:paddingLeft="5dp"
                    android:textSize="14dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="vertical"
                android:paddingLeft="16dp"
                android:paddingRight="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="@string/city"
                    android:textColor="@color/colorPrimary" />

                <EditText
                    android:id="@+id/delivery_city"
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:layout_marginTop="6dp"
                    android:background="@drawable/custom_edittext_grey_bg"
                    android:hint="@string/enter_city"
                    android:imeOptions="actionNext"
                    android:inputType="textCapWords"
                    android:maxLength="30"
                    android:paddingLeft="5dp"
                    android:textSize="14dp" />

            </LinearLayout>


