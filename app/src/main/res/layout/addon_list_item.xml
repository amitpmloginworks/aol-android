<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/tools"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:cardBackgroundColor="#f4f4f4"
        card_view:cardCornerRadius="4dp"
        card_view:cardUseCompatPadding="true"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:padding="8dp"
            android:baselineAligned="false">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/iv_addon_food"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:scaleType="fitXY"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:orientation="vertical"
                android:paddingStart="10dp"
                android:paddingTop="0dp"
                android:paddingLeft="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:baselineAligned="false">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_addon_food_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Navratan Korma"
                            android:textColor="#d65353"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/tv_addon_description"
                            android:layout_width="wrap_content"
                            android:inputType="textMultiLine"
                            android:layout_height="wrap_content"
                            android:text="(Nine Germ Curry)" />

                        <TextView
                            android:id="@+id/tv_addon_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="SR 1099/-" />
                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="2"
                    android:baselineAligned="false">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_weight="1.8"
                        android:gravity="end">

                        <ImageView
                            android:id="@+id/iv_addon_minus"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@mipmap/minus"
                            android:contentDescription="imageview" />

                        <TextView
                            android:id="@+id/tv_addon_food_counter"
                            android:layout_width="30dp"
                            android:layout_height="match_parent"
                            android:layout_marginEnd="5dp"
                            android:layout_marginStart="5dp"
                            android:gravity="center"
                            android:text="0"
                            android:textSize="16sp" />

                        <ImageView
                            android:id="@+id/iv_addon_plus"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@mipmap/plus"
                            android:contentDescription="imageview" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/white"/>
</LinearLayout>
